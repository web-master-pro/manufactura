.slider-header
    width 100%
    position relative

    &__slide
        width 100%
        height 485px
        background-color #000
        background-repeat no-repeat
        background-position left top
        background-size cover
        padding 160px 60px 0
        +below(767px)
            padding 140px 20px
        +below(479px)
            height 320px
            padding-top 70px

    &__content
        display block
        width 100%
        max-width 340px
        padding 1px 10px
        margin 0
        text-align center
        position relative
        z-index 100
        margin 0
        +below(767px)
            margin 0 auto

    &__title
        color white
        font(PlayBold,50)
        font-size 33px
        line-height 1.1
        margin 0 0 20px
        +below(479px)
            font-size 24px

    &__subtitle
        color #d1d1d1
        font(Play)
        font-size 20px
        line-height 1.5
        text-transform uppercase
        margin 0 0 20px
        +below(479px)
            font-size 14px

    .owl-prev
    .owl-next
        display block
        width 12px
        height 12px
        font-size 0
        color transparent
        position absolute
        bottom 232px
        cursor pointer
        transition all .3s ease

    .owl-prev
        left 30px
        border-left 1px solid #fff
        border-bottom 1px solid #fff
        transform rotate(45deg)
        &:hover
            left 28px
        +below(480px)
            left 10px
            bottom 160px
            &:hover
                left 8px

    .owl-next
        right 30px
        border-right 1px solid #fff
        border-top 1px solid #fff
        transform rotate(45deg)
        &:hover
            right 28px
        +below(480px)
            right 10px
            bottom 160px
            &:hover
                right 8px

    .owl-dots
        text-align center
        font-size 0
        position absolute
        left 0
        right 0
        bottom 30px

    .owl-dot
        display inline-block
        width 10px
        height 10px
        background-color white
        border-radius 50%
        margin 0 7px
        cursor pointer
        &.active
        &:hover
            background-color #b38b10


