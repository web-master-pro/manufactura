.menu-select
    position relative
    text-align left

    &__button
        display inline-block
        color #383838
        font()
        font-size 14px
        line-height 1
        padding 0 12px 0 0
        margin 0
        position relative
        text-decoration none
        &::after
            content ""
            display block
            width 5px
            height 5px
            border-right 1px solid #383838
            border-bottom 1px solid #383838
            transform rotate(45deg)
            position absolute
            top 3px
            right 0
        &.on
            color #b38b10
            text-decoration none
            &::after
                border-left 1px solid #b38b10
                border-top 1px solid #b38b10
                border-bottom none
                border-right none
                top 6px
        &:hover
            color #b38b10
            text-decoration none
            &::after
                border-color #b38b10

    &__list
        display none
        position absolute
        top 30px
        left -20px
        z-index 100
        background-color #efefef
        padding 10px 0 10px
        margin 0
        overflow-y auto
        overflow-x hidden

    &__item
        display block
        width 100%
        min-width 140px
        color #383838
        font()
        font-size 14px
        line-height 1.2
        padding 0
        margin 0

    &__link
        display block
        color #383838
        position relative
        padding 10px 10px 10px 30px
        text-decoration none
        &::before
            content ""
            display block
            width 7px
            height 7px
            background-color #fff
            position absolute
            top 13px
            left 15px
        sup
            color #898989
            font-size 8px
            font-weight 300
        &:hover
            color #b38b10
            text-decoration none
            &::before
                background-color #b38b10
            sup
                color #b38b10

        &.checked
            &::before
                background-color #383838



