.block-sale
    container(990px)
    min-height 320px
    padding 100px 20px 50px
    background #000 url(img/block-sale-bg.jpg) no-repeat center center
    background-size cover
    text-align center
    margin-bottom 25px

    &__title
        color white
        font(PlayBold)
        font-size 41px
        line-height 1.1
        margin 0 0 12px
        +below(479px)
            font-size 32px

    &__subtitle
        color #e8e8e8
        font(Play)
        font-size 20px
        line-height 1.5
        margin 0 0 20px
        +below(479px)
            font-size 16px

