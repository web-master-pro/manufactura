.menu-main
    display block
    padding 0
    margin 0

    &__list
        display block
        list-style none
        font-size 0
        padding 17px 0 0 0
        margin 0
        ^[0]--footer &
            padding-top 10px

    &__item
        display inline-block
        color #383838
        font(Regular,50)
        font-size 16px
        line-height 18px
        margin 0 35px 0 0
        position relative
        &:last-child
            margin-right 0

        &:hover
        &.active
            &::after
                border-color #b38b10
        ^[0]--footer &
            margin-right 20px
            &:last-child
                margin-right 0

    &__link
        display inline-block
        color #383838
        padding-bottom 1px
        text-decoration none
        position relative
        &::after
            content ""
            display block
            width 0px
            height 1px
            background-color #b38b10
            position absolute
            bottom 0
            left 0
            transition width .3s ease
        ^[0]--footer &
            color #e8e8e8
        ^[0]__item--submenu &
            padding-right 16px
            &::before
                content ""
                display block
                width 5px
                height 5px
                border-bottom 1px solid #383838
                border-right 1px solid #383838
                transform rotate(45deg)
                transform-origin center center
                position absolute
                right 1px
                top 5px
                ^[0]--footer &
                    border-color #e8e8e8
        ^[0]__item.expanded &
            &::before
                transform rotate(-135deg) translate(-1px,-2px) !important
                border-color #b38b10
        &:hover
        &.active
        ^[0]__item.active &
        ^[0]__item.expanded &
            color #b38b10
            text-decoration none
            &::after
                width 100%
            &::before
                border-color #b38b10





.menu-main-sub
    display none
    width 180px
    list-style none
    padding 0
    margin 0
    position absolute
    top 25px
    left 0
    z-index 100
    background-color #fff
    box-shadow 0px 2px 5px rgba(0,0,0,.1)

    .menu-main__item:last-child &
        left auto
        right 0

    &__item
        display block
        width 100%
        color #383838a
        font(Regular,50)
        font-size 16px
        line-height 18px
        padding 0
        margin 0
    &__link
        display block
        color #383838
        text-decoration none
        padding 10px
        &:hover
            color #b38b10
            text-decoration none
            background-color #f9f9F9
