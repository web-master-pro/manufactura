mixin menu-main()
    nav.menu-main&attributes(attributes)
        ul.menu-main__list
            li.menu-main__item
                if section == "buy"
                    a(href="card.html").menu-main__link.active Купить
                else
                    a(href="card.html").menu-main__link Купить
            li.menu-main__item
                if section == "sale"
                    a(href="sale.html").menu-main__link.active Продать
                else
                    a(href="sale.html").menu-main__link Продать
            li.menu-main__item
                if section == "services"
                    a(href="services.html").menu-main__link.active Услуги
                else
                    a(href="services.html").menu-main__link Услуги
                ul.menu-main-sub
                    li.menu-main-sub__item
                        a(href="services.html#services-credit").menu-main-sub__link Получить кредит
                    li.menu-main-sub__item
                        a(href="services.html#services-evaluation").menu-main-sub__link Оценка изделий
                    li.menu-main-sub__item
                        a(href="services.html#services-shop").menu-main-sub__link Комиссионный магазин
                    li.menu-main-sub__item
                        a(href="services.html#services-remont").menu-main-sub__link Ремонт часов
                    li.menu-main-sub__item
                        a(href="services.html#services-storage").menu-main-sub__link Хранение и страхование
            li.menu-main__item
                if section == "blog"
                    a(href="blog.html").menu-main__link.active Блог
                else
                    a(href="blog.html").menu-main__link Блог
            li.menu-main__item
                if section == "about"
                    a(href="about.html").menu-main__link.active О нас
                else
                    a(href="about.html").menu-main__link О нас
            li.menu-main__item
                if section == "contacts"
                    a(href="contacts.html").menu-main__link.active Контакты
                else
                    a(href="contacts.html").menu-main__link Контакты

