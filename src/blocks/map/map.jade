mixin map()

    div.map#map
        
        script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&language=ru")
        script.
            var myLatLng = {lat: 55.7520263, lng: 37.6153107};
            var styleArray = [{featureType: "all"}];
            function initialize() {
                var mapOptions = {
                    zoom: 17,
                    center: myLatLng,
                    scrollwheel: false,
                    draggable: false,
                    zoomControl: true,
                    styles: styleArray,
                };
                var map = new google.maps.Map(document.getElementById('map'), mapOptions);
                marker = new google.maps.Marker({
                    position: myLatLng,
                    map: map
                });
            }
            google.maps.event.addDomListener(window, 'load', initialize);
