.why
    display block
    width 100%
    background-color #efefef

    &__in
        container(1030px)
        padding 50px 20px 20px

    &__title
        color #383838
        font(PlayBold)
        font-size 18px
        line-height 1
        text-align center
        text-decoration underline
        margin 0 0 50px

    &__list
        counter-reset list
        list-style none
        display flex
        flex-flow row wrap
        justify-content space-around
        padding 0
        margin 0

    &__item
        display inline-block
        max-width 160px
        padding 50px 0 0 0
        margin 0 10px 30px
        position relative
        &::before
            counter-increment list
            content counter(list)
            display block
            width 28px
            height 28px
            border 1px solid #b38b10
            border-radius 50%
            color #383838
            font(PlayBold)
            font-size 16px
            line-height 22px
            text-align center
            position absolute
            top 0
            left 50%
            margin-left -14px

    &__caption
        color #b38b10
        font(Regular,10)
        font-size 16px
        line-height 1.2
        text-align center
        margin 0 0 15px

    &__text
        color #383838
        font(Light,10)
        font-size 14px
        line-height 1.2
        text-align center
        margin 0

