.partners
    width 100%
    margin-bottom 25px

    &__in
        container(980px)
        padding 0 20px

    &__partners
        list-style none
        padding 0
        margin 0
        font-size 0
        display flex
        flex-flow row wrap
        justify-content space-between
        margin 0 0 20px
        +below(991px)
            justify-content space-around
        +below(479px)
            max-width 180px
            margin 0 auto 20px

    &__partner
        flex 0 0 auto
        color #383838
        font(Regular,50)
        font-size 14px
        line-height 18px
        cursor pointer
        margin 0 10px 15px 0
        position relative
        &:last-child
            margin-right 0
        &::after
            content ""
            display block
            width 14px
            height 7px
            border-style solid
            border-width 7px 7px 0 7px
            border-color #b38b10 transparent transparent transparent
            position absolute
            bottom -10px
            left 50%
            margin-left -7px
            opacity 0
            transition opacity .3s ease
        &:hover
        &.active
            color #b38b10
            &::after
                opacity 1

        +below(479px)
            flex 0 0 100%
            padding-left 20px
            margin-right 0
            &::after
                display none
            &.active
            &:hover
                &::before
                    content ""
                    display block
                    width 7px
                    height 10px
                    border-style solid
                    border-width 5px 0 5px 7px
                    border-color transparent transparent transparent #b38b10
                    position absolute
                    left 0
                    top 2px

    &__contacts
        display block
        width 100%
        border 1px solid #b38b10
        list-style none
        padding 16px
        margin 0

    &__contact
        display none
        width 100%
        color #383838
        font(Light, 50)
        font-size 14px
        line-height 21px
        text-align center
        &.active
            display block

    &__phone
        color #383838
        text-decoration none
        &:hover
            color @color
            text-decoration none
