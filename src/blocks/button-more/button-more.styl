.button-more
    display block
    width 100%
    height 35px
    background transparent
    border 1px solid #b38b10
    outline none
    text-decoration none
    position relative
    &::before
        content ""
        display block
        width 9px
        height 9px
        border-right 1px solid #b38b10
        border-bottom 1px solid #b38b10
        transform-origin center center
        transform rotate(45deg)
        position absolute
        top 50%
        left 50%
        margin-top -6px
        margin-left -8px
        transition all .3s ease
    &:hover
        text-decoration none
        &::before
            margin-top -5px
