.photos
    display block
    width 100%
    margin-bottom 25px

    &__in
        container(980px)
        padding 0 20px

    &__photos
        display flex
        flex-flow row wrap
        justify-content space-between
        align-items flex-start
        width 100%
        max-width 980px
        padding 0 10px
        font-size 0
        margin 0 auto
        +below(991px)
            justify-content space-around
        +below(479px)
            padding 0 20px

    &__photo
        flex 0 0 auto
        align-self flex-start
        display block
        width 100%
        max-width 280px
        height auto
        max-height 180px
        margin 0 10px 25px
        +below(479px)
            margin 0 0 20px
