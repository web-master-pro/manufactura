.form
    width 100%
    &--sale
        margin-bottom 50px
        +below(991px)
            margin-bottom 25px

    &__in
        container(700px)
        padding 0 20px

    &__group
        display flex
        flex-flow row nowrap
        justify-content space-between

        & ^[0]__input
            flex 0 0 48%
            max-width 48%

        +below(767px)
            flex-wrap wrap
            & ^[0]__input
                flex 0 0 100%
                max-width 100%

    &__input
        margin 0 0 20px

    &__textarea
        margin 0 0 25px

    &__button
        display block
        width 145px
        height 35px
        background-color #b38b10
        border none
        outline none
        color white
        font(Regular,50)
        font-size 14px
        line-height 1
        text-transform uppercase
        text-align center
        padding 11px
        margin 0 auto
        cursor pointer
        transition all .3s ease
        &:hover
            background-color darken(#b38b10,15%)
