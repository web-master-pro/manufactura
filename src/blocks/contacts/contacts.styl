.contacts
    width 100%
    &__in
        display flex
        flex-flow row wrap
        justify-content space-around
        width 100%
        max-width 1030px
        margin-right auto
        margin-left auto
        padding 0 20px

    &__col
        flex 0 0 auto
        min-width 155px
        display inline-block
        text-align center
        margin 0 0 20px

    &__caption
        color #b38b10
        font(Regular,-10)
        font-size 14px
        line-height 1.2
        margin 0

    &__text
        color #383838
        font(Regular,-10)
        font-size 14px
        font-style normal
        line-height 1.2
        margin 0

    &__phone
        color #383838
        text-decoration none
        &:hover
            color @color
            text-decoration none
    &__email
        color #383838
        text-decoration none
        &:hover
            color @color
            text-decoration underline
