.footer
    background-color #383838

    &__in
        container(1030px)
        padding 25px 20px 20px
        display flex
        flex-flow row nowrap
        justify-content space-between

    &__left
        flex 0 0 50%
        +below(991px)
            flex 0 0 100%
            text-align center

    &__right
        flex 0 0 50%
        +below(991px)
            display none

    &__logo
        margin 0 0 37px
        +below(991px)
            margin 0 auto 15px

    &__text
        color #ddd
        font(Regular,50)
        font-size 12px
        line-height 1.3
        font-style normal
        margin 7px 0
        +above(480px)
            margin 0
            br
                display none

    &__phone
        color #ddd
        text-decoration none
        &:hover
            color @color
            text-decoration none
    &__email
        color #ddd
        text-decoration none
        &:hover
            color @color
            text-decoration underline
