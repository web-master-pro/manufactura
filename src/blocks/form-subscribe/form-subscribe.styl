.form-subscribe
    width 100%
    padding 0 20px
    margin 0 auto 25px
    +below(991px)
        padding 0
        margin 0

    &__in
        container(940px)
        background-color #efefef
        display flex
        flex-flow row wrap
        justify-content center
        padding 12px
        +below(479px)
            padding 8px 0 15px

    &__title
        flex 0 0 auto
        color #383838
        font(Regular, 40)
        font-size 14px
        line-height 35px
        margin 0 20px 0 0

    &__group
        flex 0 1 270px
        max-width 270px
        display flex
        flex-flow row nowrap
        justify-content space-between

    &__input-wrapper
        flex 0 1 215px
        max-width 215px
        position relative

    &__input
        display inline-block
        width 100%
        height 35px
        background-color white
        border none
        outline none
        color #aeaeae
        font(Regular,50)
        font-size 12px
        line-height 35px
        padding 0 15px
        margin 0 20px 0 0
        &.error
            border 1px dotted rgba(255,0,0,.5)

    &__button
        flex 0 0 auto
        display block
        width 35px
        height 35px
        background-color #b38b10
        border none
        outline none
        position relative
        cursor pointer
        &::after
            content ""
            display block
            width 5px
            height 5px
            border-right 1px solid #fff
            border-bottom 1px solid #fff
            transform-origin center center
            transform rotate(-45deg)
            position absolute
            top 15px
            left 14px

